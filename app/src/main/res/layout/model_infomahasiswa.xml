<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="75dp">


    <TextView
        android:text="prio dwi sembodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:id="@+id/model_info_namamahasiswa"/>

    <TextView
        android:text="prio dwi sembodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/model_info_namamahasiswa"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorText"
        android:id="@+id/model_info_nimmahasiswa"/>

    <TextView
        android:text="Angkatan : 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        app:layout_constraintTop_toTopOf="@id/model_info_namamahasiswa"
        app:layout_constraintBottom_toBottomOf="@id/model_info_nimmahasiswa"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorText"
        android:id="@+id/model_info_angkatanmahasiswa"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorText"
        app:layout_constraintTop_toBottomOf="@id/model_info_nimmahasiswa"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>